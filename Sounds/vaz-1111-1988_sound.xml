<?xml version="1.0"?>
 
<PropertyList>
 <fx>


<!-- Current Engine Sound -->
    <engine>
      <name>engine #1 running</name>
      <mode>looped</mode>
      <path>Aircraft/vaz-1111-1988/Sounds/engine.wav</path>
<condition>
    <property>/engines/engine/running</property>
   </condition>
   <volume>
    <property>/engines/engine/mp-osi</property>
    <factor>0.005</factor>
    <min>0.02</min>
    <max>0.02</max>
    <offset>0.15</offset>
   </volume>
    </engine>

    <tire-rumble>
      <name>tire-rumble</name>
      <mode>looped</mode>
      <path>Sounds/rumble.wav</path>
      <condition>
        <or>
          <property>/gear/gear[0]/wow</property>
          <property>/gear/gear[1]/wow</property>
          <property>/gear/gear[2]/wow</property>
          <property>/gear/gear[3]/wow</property>
        </or>
      </condition>
      <volume>
  <property>/velocities/groundspeed-kt</property>
        <factor>.1</factor>
        <max>1</max>
      </volume>
    </tire-rumble>

    <thud>
      <name>thud</name>
   <path>Aircraft/vaz-1111-1988/Sounds/1.wav</path>
<position>
<x>0.01</x>
<y>0.01</y>
<z>0.01</z>
</position>
      <condition>
        <or>
          <property>/gear/gear[0]/wow</property>
          <property>/gear/gear[1]/wow</property>
          <property>/gear/gear[2]/wow</property>
          <property>/gear/gear[3]/wow</property>
        </or>
      </condition>
      <volume>
        <property>/velocities/speed-down-fps</property>
        <factor>18</factor>
      </volume>
    </thud>

 </fx>
</PropertyList>
